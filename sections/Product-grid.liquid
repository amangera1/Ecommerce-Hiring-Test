          </svg>
        </div>
      </div>

      <!-- Hidden Popup for this product -->
      <div class="product-popup-overlay" id="popup-{{ block.id }}">
        <div class="product-popup">
          <button class="close-btn" onclick="closePopup('{{ block.id }}')">×</button>

          {% assign product = all_products[block.settings.product.handle] %}
          {% if product %}
            <div class="popup-inner">
              {{ product.featured_image | image_url: width:800 | image_tag: class:'main-image', loading:'lazy' }}
              <h3>{{ product.title }}</h3>
              <p><strong>{{ product.price | money }}</strong></p>
              <p>{{ product.description | strip_html | truncate: 120 }}</p>

              {% if product.options.size > 0 %}
                {% for option in product.options_with_values %}
                  <label>{{ option.name }}</label>
                  {% if option.name contains 'Color' %}
                    <div style="display:flex; gap:8px;">
                      {% for value in option.values %}
                        <button style="flex:1; border:1px solid #000; padding:6px;">{{ value }}</button>
                      {% endfor %}
                    </div>
                  {% else %}
                    <select style="width:100%; padding:6px;">
                      <option>Choose your {{ option.name }}</option>
                      {% for value in option.values %}
                        <option>{{ value }}</option>
                      {% endfor %}
                    </select>
                  {% endif %}
                {% endfor %}
              {% endif %}

              <button style="margin-top:15px; width:100%; padding:10px; background:#000; color:#fff;">
                ADD TO CART →
              </button>
            </div>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>


<script>
