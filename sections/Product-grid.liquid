<script>
  function closePopup(id) {
    document.getElementById('popup-' + id).style.display = 'none';
  }

  document.addEventListener('DOMContentLoaded', function () {
    const plusIcons = document.querySelectorAll('.plus-icon');

    plusIcons.forEach((icon) => {
      icon.addEventListener('click', function (e) {
        e.preventDefault();
        const popupId = this.getAttribute('data-popup-id');
        document.getElementById(popupId).style.display = 'flex';
      });
    });
  });

  document.querySelectorAll('[data-select]').forEach((select) => {
    const trigger = select.querySelector('.select-trigger');
    const options = select.querySelectorAll('.select-option');
    const span = trigger.querySelector('span');

    trigger.addEventListener('click', () => {
      select.classList.toggle('open');
    });

    options.forEach((option) => {
      option.addEventListener('click', () => {
        span.textContent = option.textContent;
        select.classList.remove('open');
      });
    });

    // Close when clicking outside
    document.addEventListener('click', (e) => {
      if (!select.contains(e.target)) {
        select.classList.remove('open');
      }
    });
  });

document.addEventListener("DOMContentLoaded", () => {
  const addToCartBtn = document.querySelector(".add-to-cart-btn");
  const errorMsg = document.querySelector(".popup-error-message");

  let selectedOptions = {
    Color: null,
    Size: null,
    VariantId: null,
  };

  // Handle color selection
  document.querySelectorAll(".option-btn").forEach(btn => {
    btn.addEventListener("click", () => {
      selectedOptions.Color = btn.dataset.value;
      selectedOptions.VariantId = btn.dataset.variantId;

      addToCartBtn.setAttribute("data-main-product", JSON.stringify(selectedOptions));
      errorMsg.style.display = "none"; // Hide error if fixed
    });
  });

  // Handle size selection
  document.querySelectorAll(".select-option").forEach(option => {
    option.addEventListener("click", () => {
      selectedOptions.Size = option.dataset.value;
      if (option.dataset.variantId) {
        selectedOptions.VariantId = option.dataset.variantId;
      }

      addToCartBtn.setAttribute("data-main-product", JSON.stringify(selectedOptions));
      errorMsg.style.display = "none"; // Hide error if fixed
    });
  });

  // Validate on Add to Cart click
  addToCartBtn.addEventListener("click", (e) => {
    if (!selectedOptions.Color || !selectedOptions.Size || !selectedOptions.VariantId) {
      e.preventDefault(); // Stop add-to-cart action
      errorMsg.style.display = "block"; // Show error
      errorMsg.textContent = "Please select all required options.";
    } else {
      errorMsg.style.display = "none"; // Hide error if all good
      // ✅ You can now proceed with your actual add-to-cart logic here
      console.log("Ready to add:", selectedOptions);
    }
  });
});


