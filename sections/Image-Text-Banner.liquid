} <style>
   .text-banner h2{
      font-family: Jost;
      font-size: 70px;
      font-weight: 500;
      line-height: 70px;
      text-align: left;
      text-underline-position: from-font;
      text-decoration-skip-ink: none;
      color: #000000;
      margin: 0;
      margin-bottom: 50px;
  }

  .subheading-ptag{
      font-family: Jost;
      font-size: 20px;
      font-weight: 400;
      line-height: 28px;
      text-align: left;
      text-underline-position: from-font;
      text-decoration-skip-ink: none;
      color: #000000;
      margin: 0;
      margin-bottom: 50px;
  }
  #{{ section.id }} .text-banner{
      color:{{ section.settings.color_text }};
       max-width: 500px;
      position: absolute;
      top: 68%;
      left: 40px;
      transform: translate(2%, -64%); 

  }

  / .main-image-banner img{
      /* position: relative; */
      width: 100%;
      height: auto;
      object-fit: contain;
  }

  .main-image.mobile{
      display: none;
  }

 

  .icon.icon-arrow{
      width: 2.5rem;
  }

  .image-text-btn{
      display: flex;
      justify-content: center;
      max-width: 220px;
      gap: 30px;
      background: black;
      color: white;
      padding-top: 15px;
      padding-bottom: 15px;
      padding-left: 25px;
      padding-right: 25px;
      font-family: Jost;
      font-size: 16px;
      font-weight: 400;
      line-height: 20.48px;
      text-align: center;
      text-underline-position: from-font;
      text-decoration-skip-ink: none;
      text-decoration: none;
  }

  @media screen and (max-width:768px){
      .main-image.mobile{
        display: block;
      }


      .main-image.desktop{
        display: none;
      }

   

      #{{ section.id }} .text-banner{
